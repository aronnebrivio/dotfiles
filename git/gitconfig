[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[alias]
	sweep = !git branch --merged $(git rev-parse origin/develop) | grep -e \"^\\s\\+\\(bugfix\\|fix\\|feature\\)/\" | xargs git branch -d
	sweep-check = !git branch --merged $(git rev-parse origin/develop) | grep -e \"^\\s\\+\\(bugfix\\|fix\\|feature\\)/\"
	subupdate = !git submodule foreach git pull origin master
