[user]
	email = aronne.brivio@gmail.com
	name = Aronne Brivio

[core]
	editor = vim
	excludesfile = ~/.gitignore_global

[alias]
	sweep = !git branch --merged $(git rev-parse origin/develop) | grep -e \"^\\s\\+\\(bugfix\\|fix\\|feature\\)/\" | xargs git branch -d
	sweep-check = !git branch --merged $(git rev-parse origin/develop) | grep -e \"^\\s\\+\\(bugfix\\|fix\\|feature\\)/\"
	subupdate = !git submodule foreach git pull origin master
	update-submodules = submodule update --init --recursive
	upgrade-submodules = submodule update --init --remote
	noff = merge --no-ff
	f = fetch --tags --prune
	fa = fetch --all --tags --prune
	lg = log --graph --date=short --oneline --decorate=full
	ghp-publish = !git checkout develop && git push --tags && git push && git checkout production && git push && git checkout develop

[grep]
	lineNumber = true

# Allow local customizations in the .gitconfig_local file
[include]
	path = ~/.gitconfig_local
